<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              tools:context="com.hujiwei.cosphotosyncer.MainActivity">

    <ImageButton android:id="@+id/syncPhoto"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:text="@string/syncPhoto"
                 android:src="@mipmap/syncbtn1"
                 android:contentDescription="@string/syncPhoto"
                 style="@android:style/Widget.Holo.ImageButton"
                 android:layout_marginTop="40dp"/>
    <TextView
            android:text="@string/syncProgress"
            android:id="@+id/syncProgressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:visibility="invisible"/>

    <ProgressBar
            android:id="@+id/syncProgressBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:visibility="invisible"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"/>

</LinearLayout>
